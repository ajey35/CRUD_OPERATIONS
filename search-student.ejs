<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Data</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #007BFF;
            color: white;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <h1>Seach Here...</h1>
    <form action="/search" method="GET">
        <div class="search-container">
            <input type="text" class="search-bar" placeholder="Search for Name" name="name">
            <input type="text" class="search-bar" placeholder="Search for Email" name="email">
            <input type="text" class="search-bar" placeholder="Search for Phone No" name="phone">
          </div>
          <input type="submit" value="Search">
    </form>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <% if (data.length > 0) { %>
                <% data.forEach(function(student) { %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.phone %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="4">No students Found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
